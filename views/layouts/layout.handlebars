<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/app.css" />
    <link rel="stylesheet" href="/css/trix.scss" />

    <link
      rel="stylesheet"
      type="text/css"
      href="https://unpkg.com/trix@2.0.8/dist/trix.css"
    />

    <script
      type="text/javascript"
      src="https://unpkg.com/trix@2.0.8/dist/trix.umd.min.js"
    ></script>

    <title>{{nombrePagina}}</title>
  </head>
  <body>
    <div class="nombre-sitio contenedor">
      <h1>
        <a href="/">devJobs</a>
      </h1>
      {{#if barra}}
        <div class="buscador">
          <form action="/buscador" method="post">
            <input type="text" name="q" class="buscar" />
            <input type="submit" value="Buscar" />
          </form>
        </div>
      {{/if}}
      {{#if cerrarSesion}}
      <div class="cerrar-sesion">
        <p>{{nombre}}</p>
        {{#if imagen}}
            <img src="/uploads/perfiles/{{imagen}}" class="admin-perfil">
        {{/if}}
        <a href="/cerrar-sesion">Cerrar Sesión</a>
        <a href="/administracion">Administración</a>
      </div>
    {{/if}}
    </div>
    
    <header class="site-header contenedor separador">
      <h2>{{nombrePagina}}</h2>
      {{#if tagline}}
        <p class="tagline">{{tagline}}</p>
      {{/if}}

      {{#if boton}}
        <a href="/vacantes/nueva" class="btn btn-azul">Publicar nueva vacante</a>
      {{/if}}

    </header>
    <div class="contenido-principal contenedor">
      {{#if mensajes}}
        <div class="alertas">
          {{#mostrarAlertas mensajes}}
            <li>DO</li>
          {{/mostrarAlertas}}
        </div>
      {{/if}}
      {{{body}}}
    </div>

    <script src="/dist/bundle.js"></script>

  </body>
</html>
<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
        <h3>Información general</h3>
        <div class="campo">
            <label>Título</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer">
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Ej: Empresa Contrata">
        </div>
         <div class="campo">
            <label>Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej: Lambayeque">
        </div>
          <div class="campo">
            <label>Salario (S/.)</label>
            <input type="text" name="salario" placeholder="Ej: S/. 25,000">
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                <option value="" disabled selected>--Selecciona--</option>
                <option value="freelance">Freelance</option>
                <option value="completo">Tiempo completo</option>
                <option value="medio">Medio tiempo</option>
                <option value="proyecto">Por Proyecto</option>
            </select>
        </div>
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label>Descripción del puesto</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>